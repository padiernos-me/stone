footer
  padding-block 1.25rem
  min-height 4.2rem

  .region--footer
    display grid

    div
      &:nth-child(2),
      &:last-child
        grid-column 1/2
      &:nth-child(2)
        grid-row 1/2
      &:last-child
        grid-row 2/3
    nav
      grid-row 1/-1
      grid-column 2/3

      .menu
        list-style square
